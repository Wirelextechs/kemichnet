{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/auth/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/client/assets/$1"
        },
        {
            "source": "/favicon.jpg",
            "destination": "/client/favicon.jpg"
        },
        {
            "source": "/vite.svg",
            "destination": "/client/vite.svg"
        },
        {
            "source": "/(.*)",
            "destination": "/client/index.html"
        }
    ]
}